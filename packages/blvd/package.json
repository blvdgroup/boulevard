{
  "name": "blvd",
  "version": "0.0.1",
  "description": "A framework for building full-stack JS applications.",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "test": "jest",
    "lint": "tslint --force -c ./tslint.json src/**/*.ts",
    "prepublish": "npm run build",
    "watch": "rimraf ./build && tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blvdgroup/boulevard.git"
  },
  "author": "blvd",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/blvdgroup/boulevard/issues"
  },
  "homepage": "https://github.com/blvdgroup/boulevard#readme",
  "devDependencies": {
    "jest": "^20.0.1",
    "rimraf": "^2.6.1",
    "ts-jest": "^20.0.3",
    "tslint": "^5.2.0",
    "tslint-eslint-rules": "^4.0.0",
    "typescript": "^2.2.1"
  },
  "dependencies": {
    "blvd-utils": "canary",
    "crypto-promise": "^2.0.0",
    "eventemitter2": "^4.1.0",
    "loglevel": "^1.4.1"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/packages/.*/build"
    ]
  }
}
